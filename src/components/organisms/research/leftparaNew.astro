---
export interface Props {
  heading: string,
  body: string,
  image: string,
  alink: string;
}

const { heading, body, alink, image, button } = Astro.props;
---




<div class="flex justify-evenly p-14 sm:p-0 sm:flex-wrap-reverse w-[100vw] sm:pt-10 align-middle">

    <div class="sm:p-0 align middle pt-20">
       <div><p class="text-4xl sm:text-2xl font-grotesk font-bold text-primary sm:pt-4">{heading}</p></div>
        <div class="pt-5 sm:pt-2"><p class="font-satoshi w-[55vw] sm:w-[80vw] font-medium text-lg sm:text-sm text-secondary flex-none order-1 flex-grow-0">{body}</p></div>        
    </div>

    <div class="align-middle sm:w-[80vw]">
        <img src={image} alt="nothinh" width="500" height="220">         
    </div>

</div>